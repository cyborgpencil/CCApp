        </Border>
        <Border  Grid.Column="1" Grid.Row="7" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Apple Juice, Pancake" TextWrapping="Wrap"/>
        </Border>

        <!--MONDAY FOOD LIST-->
